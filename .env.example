# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/online_gacha

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_user
MINIO_SECRET_KEY=minio_password
MINIO_BUCKET_NAME=gacha-images
MINIO_USE_SSL=false

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-long-and-random
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production-must-be-long-and-random

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=true

# Analytics Configuration
ANALYTICS_STATS_TTL=300
ANALYTICS_DASHBOARD_TTL=600
ANALYTICS_DEMOGRAPHICS_TTL=900
ANALYTICS_HOURLY_TTL=1800
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_REALTIME_ENABLED=true

# A/B Testing Configuration
AB_TEST_DEFAULT_DURATION=14
AB_TEST_MIN_SAMPLE_SIZE=100
AB_TEST_SIGNIFICANCE_THRESHOLD=0.05
